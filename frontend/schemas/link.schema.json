{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Containerlab Link Schema",
  "description": "Schema for containerlab link/connection definition",
  "type": "object",
  "required": ["id", "source", "target"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the link"
    },
    "source": {
      "type": "object",
      "required": ["deviceId", "interface"],
      "description": "Source endpoint",
      "properties": {
        "deviceId": {
          "type": "string",
          "description": "ID of the source device"
        },
        "interface": {
          "type": "string",
          "description": "Interface name on source device",
          "examples": ["eth0", "eth1", "ethernet1", "ethernet2"]
        }
      }
    },
    "target": {
      "type": "object",
      "required": ["deviceId", "interface"],
      "description": "Target endpoint",
      "properties": {
        "deviceId": {
          "type": "string",
          "description": "ID of the target device"
        },
        "interface": {
          "type": "string",
          "description": "Interface name on target device",
          "examples": ["eth0", "eth1", "ethernet1", "ethernet2"]
        }
      }
    },
    "ui": {
      "type": "object",
      "description": "UI representation properties",
      "properties": {
        "style": {
          "type": "string",
          "enum": ["solid", "dashed", "dotted"],
          "description": "Line style"
        },
        "width": {
          "type": "number",
          "minimum": 1,
          "maximum": 5,
          "description": "Line width in pixels"
        },
        "color": {
          "type": "string",
          "description": "Hex color code",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        }
      }
    }
  }
}
