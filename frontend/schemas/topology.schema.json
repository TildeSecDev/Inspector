{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Containerlab Topology Schema",
  "description": "Schema for complete containerlab topology definition",
  "type": "object",
  "required": ["name", "nodes"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Topology name/project title",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "description": "Optional topology description"
    },
    "nodes": {
      "type": "array",
      "description": "Array of devices/nodes in the topology",
      "items": {
        "$ref": "node.schema.json"
      },
      "minItems": 1
    },
    "links": {
      "type": "array",
      "description": "Array of connections between nodes",
      "items": {
        "$ref": "link.schema.json"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string"
        }
      }
    }
  }
}
