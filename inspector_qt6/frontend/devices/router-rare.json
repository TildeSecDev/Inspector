{
  "id": "router-rare",
  "name": "FreeRTR Router (RARE)",
  "description": "FreeRTR containerlab router for network routing and switching",
  "kind": "rare",
  "image": "ghcr.io/rare-freertr/freertr-containerlab:latest",
  "properties": {
    "exec": [],
    "env": {
      "DATAPLANE_TYPE": "pcapInt",
      "INIT_VRF": "true"
    },
    "binds": [],
    "IP": "",
    "GW": ""
  },
  "ui": {
    "icon": "router",
    "color": "#06b6d4",
    "category": "router",
    "defaultPosition": {
      "x": 150,
      "y": -100
    }
  },
  "configurableFields": [
    "name",
    "image",
    "env",
    "binds"
  ],
  "validation": {
    "requiresImage": false,
    "requiresKind": true,
    "requiresConfig": true,
    "configPath": "./configs/{deviceName}:/config"
  },
  "notes": "Routers require configuration files. Create ./configs/{deviceName}/ directory with appropriate FreeRTR config files before building."
}
