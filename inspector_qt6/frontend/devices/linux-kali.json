{
  "id": "linux-kali",
  "name": "Kali Linux",
  "description": "Penetration testing and security tools container",
  "kind": "linux",
  "image": "kalilinux/kali-rolling",
  "properties": {
    "exec": [
      "ip addr add 10.0.30.10/24 dev eth1",
      "ip link set eth1 up",
      "ip route add default via 10.0.30.1 dev eth1",
      "printf 'nameserver 1.1.1.1\\nnameserver 8.8.8.8\\n' > /etc/resolv.conf",
      "sysctl -w net.ipv6.conf.all.disable_ipv6=1",
      "sysctl -w net.ipv6.conf.default.disable_ipv6=1"
    ],
    "env": {
      "IP": "10.0.30.10/24",
      "GW": "10.0.30.1"
    },
    "binds": [],
    "IP": "10.0.30.10/24",
    "GW": "10.0.30.1"
  },
  "ui": {
    "icon": "alert-triangle",
    "color": "#ef4444",
    "category": "attacker",
    "defaultPosition": {
      "x": 200,
      "y": 0
    }
  },
  "configurableFields": [
    "name",
    "image",
    "exec",
    "env",
    "IP",
    "GW",
    "binds"
  ],
  "validation": {
    "requiresImage": false,
    "requiresKind": true,
    "ipAddressFormat": "CIDR"
  }
}
