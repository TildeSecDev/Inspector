{
  "id": "linux-netshoot",
  "name": "Netshoot",
  "description": "Network utility container with comprehensive network tools",
  "kind": "linux",
  "image": "nicolaka/netshoot:latest",
  "properties": {
    "exec": [
      "ip addr add 203.0.113.1/24 dev eth1",
      "sysctl -w net.ipv4.ip_forward=1",
      "iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE",
      "ip route add 10.0.0.0/8 via 203.0.113.2 dev eth1"
    ],
    "env": {
      "IP": "203.0.113.1/24",
      "GW": "203.0.113.2"
    },
    "binds": [],
    "IP": "203.0.113.1/24",
    "GW": "203.0.113.2"
  },
  "ui": {
    "icon": "network",
    "color": "#8b5cf6",
    "category": "network",
    "defaultPosition": {
      "x": 100,
      "y": 0
    }
  },
  "configurableFields": [
    "name",
    "image",
    "exec",
    "env",
    "IP",
    "GW",
    "binds"
  ],
  "validation": {
    "requiresImage": false,
    "requiresKind": true,
    "ipAddressFormat": "CIDR"
  }
}
