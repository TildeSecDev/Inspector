{
  "name": "@inspectortwin/desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run build && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "npm run dev --workspace=@inspectortwin/renderer",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "tsc",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@inspectortwin/project-store": "*",
    "@inspectortwin/core-sim": "*",
    "@inspectortwin/report-kit": "*",
    "@inspectortwin/lab-runtime": "*",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.inspectortwin.app",
    "productName": "Inspector Twin",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
