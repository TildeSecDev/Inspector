{
  "name": "inspector-electron",
  "version": "0.1.0",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build:mac": "electron-builder --mac",
    "dist": "electron-builder --mac --dir",
    "postinstall": "echo 'Run `npm --prefix ./block-bash/blockbash install` if you want to install the original server dependencies; this standalone app does not need them.'"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "pdf-lib": "^1.17.1",
    "reactflow": "^11.10.3",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0",
    "playwright": "^1.46.1",
    "prettier": "^3.3.3",
    "vite": "^5.4.2"
  },
  "build": {
    "appId": "com.tildesec.inspector",
    "productName": "Inspector",
    "files": [
      "electron-app/**/*",
      "electron-main.js",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "target": ["dmg","zip"],
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "background": null,
      "contents": [
        { "x": 130, "y": 220, "type": "file" },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    }
  }
}
